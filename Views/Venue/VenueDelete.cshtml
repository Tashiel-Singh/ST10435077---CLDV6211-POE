@model ST10435077___CLDV6211_POE.Models.Venue
@{
    ViewData["Title"] = "Delete Venue";
}
<h1>Delete Venue</h1>
<div>
    <h4>Are you sure you want to delete this venue?</h4>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.VenueName</dd>
        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.Location</dd>
        <dt class="col-sm-2">Capacity</dt>
        <dd class="col-sm-10">@Model.Capacity</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="VenueId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="VenueList" class="btn btn-secondary">Cancel</a>
    </form>
</div>
