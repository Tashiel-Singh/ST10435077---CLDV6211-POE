@{
    Layout = "_Layout";
}

@model List<ST10435077___CLDV6211_POE.Venue>           

<h1>Venues</h1>     

<table class="table">
    <thead>
        <tr>
            <th>Venue ID</th>
            <th>Venue Name</th>
            <th>Capacity</th>
            <th>Location</th>
            <th>Image Url</th>
        </tr>
        </thead>
            <tbody>
                @foreach (var venue in Model)
                {
                    <tr>
                        <td>@venue.VenueId</td>
                        <td>@venue.VenueName</td>
                        <td>@venue.Capacity</td>
                        <td>@venue.Location</td>
                        <td>@venue.ImageUrl</td>
                        <td>
                            <a class="btn btn-primary" asp-controller="Venue" asp-action="VenueEdit" asp-route-VenueID="@venue.VenueId" >Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        
</table>

<div class="mt-3">
    <a class="btn btn-success" asp-controller="Venue" asp-action="VenueAdd">
        <i class="fas fa-plus"></i> Add New Venue
    </a>
</div>