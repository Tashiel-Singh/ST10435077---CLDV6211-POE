@model ST10435077___CLDV6211_POE.Models.Booking
@{
    ViewData["Title"] = "Delete Booking";
}
<h1>Delete Booking</h1>
<div>
    <h4>Are you sure you want to delete this booking?</h4>
    <dl class="row">
        <dt class="col-sm-2">Event</dt>
        <dd class="col-sm-10">@Model.Event?.EventName</dd>
        <dt class="col-sm-2">Venue</dt>
        <dd class="col-sm-10">@Model.Venue?.VenueName</dd>
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.BookingDate</dd>
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>
    <form asp-action="DeleteBooking" method="post">
        <input type="hidden" asp-for="BookingId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="BookingList" class="btn btn-secondary">Cancel</a>
    </form>
</div>
