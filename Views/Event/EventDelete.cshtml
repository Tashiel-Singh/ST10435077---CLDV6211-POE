@model ST10435077___CLDV6211_POE.Models.Event
@{
    ViewData["Title"] = "Delete Event";
}
<h1>Delete Event</h1>
<div>
    <h4>Are you sure you want to delete this event?</h4>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.EventName</dd>
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.EventDate</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
    </dl>
    <form asp-action="DeleteEvent" method="post">
        <input type="hidden" asp-for="EventId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="EventList" class="btn btn-secondary">Cancel</a>
    </form>
</div>
