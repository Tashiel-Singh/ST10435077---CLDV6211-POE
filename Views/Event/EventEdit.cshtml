@{
    Layout = "_Layout";
}

@model ST10435077___CLDV6211_POE.Event
@{
    ViewData["Title"] = "Add Event";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Edit Event</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="EventId" />

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="EventName" class="form-label"></label>
                        <input asp-for="EventName" class="form-control" />
                        <span asp-validation-for="EventName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="EventType" class="form-label"></label>
                        <input asp-for="EventType" class="form-control" maxlength="100" />
                        <span asp-validation-for="EventType" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="EventDate" class="form-label"></label>
                        <input asp-for="EventDate" type="datetime-local" class="form-control" />
                        <span asp-validation-for="EventDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="VenueId" class="form-label"></label>
                    <select asp-for="VenueId" asp-items="ViewBag.Venues" class="form-select">
                        <option value="">-- Select Venue --</option>
                    </select>
                    <span asp-validation-for="VenueId" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="List" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                    <div>
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="fas fa-save"></i> Save Changes
                        </button>
                        <button type="reset" class="btn btn-outline-danger">
                            <i class="fas fa-undo"></i> Reset
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Initialize date picker if needed
        $(function(){
            $('#EventDate').datetimepicker({
                format: 'YYYY-MM-DD HH:mm'
            });
        });
    </script>
}