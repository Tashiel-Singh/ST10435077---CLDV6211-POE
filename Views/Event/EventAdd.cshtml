@{
    Layout = "_Layout";
}

@model ST10435077___CLDV6211_POE.Event 
@{
    ViewData["Title"] = "Add Event";
}

<form asp-action="Add">
    <div class="form-group">
        <label asp-for="EventName"></label>
        <input asp-for="EventName" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="EventDate"></label>
        <input asp-for="EventDate" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="VenueId"></label>
        <select asp-for="VenueId" asp-items="ViewBag.Venues" class="form-control"></select>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>